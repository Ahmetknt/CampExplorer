
@{
    ViewData["Title"] = "Register";
}

@model CampExplorer.Web.Models.RegisterInput

<div class="row">

    <div class="col-md-4 offset-md-4">
        <div class="card">

            <div class="card-body">

                <h5 class="card-title">Kayıt Ol</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="Register" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="exampleInputPassword1" class="form-label"></label>
                        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" for="exampleInputEmail1" class="form-label"></label>
                        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Kayıt ol</button>
                </form>
            </div>
        </div>
    </div>
</div>

